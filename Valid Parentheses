class Solution {
    public boolean isValid(String s) {
        int n = s.length();
        char[] arr = new char[n];
        int j = 0; 
        
        for (int i = 0; i < n; i++) {
            char ch = s.charAt(i);
            
            if (ch == '(' || ch == '[' || ch == '{') {
                arr[j++] = ch;
            } else {
                if (j == 0) return false; 
                
                char ch1 = arr[j - 1];
                
                if ((ch1 == '(' && ch == ')') ||
                    (ch1 == '[' && ch == ']') ||
                    (ch1 == '{' && ch == '}')) {
                    j--;   
                } else {
                    return false;
                }
            }
        }
        return j == 0;
    }
}
