class Solution {
    public boolean isPalindrome(int x) {
        String str=""+x;
        char a;
        char b;
        char first=str.charAt(0);
        if((first=='+') || (first=='-'))
        {
            return false;
        }
        int n=str.length();
        for(int i=0;i<n/2;i++)
        {
            a=str.charAt(i);
            b=str.charAt(n-i-1);
            if(a!=b)
            {
                return false;
            }

        }
        return true;
    }
}
